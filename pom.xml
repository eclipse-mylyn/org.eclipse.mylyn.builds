<?xml version="1.0" encoding="UTF-8"?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd" xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.eclipse.mylyn</groupId>
    <artifactId>org.eclipse.mylyn-parent</artifactId>
    <version>3.24.2-SNAPSHOT</version>
    <relativePath>../org.eclipse.mylyn/org.eclipse.mylyn-parent</relativePath>
  </parent>
  <groupId>org.eclipse.mylyn.builds</groupId>
  <artifactId>org.eclipse.mylyn.builds-parent</artifactId>
  <version>1.16.0-SNAPSHOT</version>
  <name>Mylyn Builds</name>
  <packaging>pom</packaging>
  <properties>
    <tycho.scmUrl>scm:git:git://git.eclipse.org/gitroot/mylyn/org.eclipse.mylyn.builds.git</tycho.scmUrl>
  </properties>
  <mailingLists>
    <mailingList>
      <name>Mylyn Builds Mailing List</name>
      <post>mylyn-builds-dev@eclipse.org</post>
      <subscribe>https://dev.eclipse.org/mailman/listinfo/mylyn-builds-dev</subscribe>
      <unsubscribe>https://dev.eclipse.org/mailman/listinfo/mylyn-builds-dev</unsubscribe>
      <archive>http://dev.eclipse.org/mhonarc/lists/mylyn-builds-dev</archive>
    </mailingList>
  </mailingLists>
  <issueManagement>
    <url>https://bugs.eclipse.org/bugs/buglist.cgi?query_format=advanced;classification=Mylyn;product=Mylyn%20Builds</url>
    <system>Bugzilla</system>
  </issueManagement>
  <repositories>
    <repository>
      <snapshots>
        <enabled>true</enabled>
      </snapshots>
      <id>mylyn-snapshots</id>
      <url>https://repo.eclipse.org/content/repositories/mylyn-snapshots/</url>
      <layout>default</layout>
    </repository>
    <repository>
      <id>mylyn-releases</id>
      <url>https://repo.eclipse.org/content/repositories/mylyn-releases/</url>
      <layout>default</layout>
    </repository>
  </repositories>
  <profiles>
	<profile>
	  <id>implicit-target</id>
      <activation>
		<property>
		  <name>!explicit-target</name>
		</property>
      </activation>
	  <repositories>
		<repository>
		  <id>eclipse-mylyn-commons</id>
		  <layout>p2</layout>
		  <url>${mylyn-commons-repository-url}</url>
		</repository>
		<repository>
		  <id>eclipse-mylyn-versions</id>
		  <layout>p2</layout>
		  <url>${mylyn-versions-repository-url}</url>
		</repository>
		<repository>
		  <id>eclipse-mylyn-tasks</id>
		  <layout>p2</layout>
		  <url>${mylyn-tasks-repository-url}</url>
		</repository>
		<!-- consider moving team api to tasks -->
		<repository>
		  <id>eclipse-mylyn-context</id>
		  <layout>p2</layout>
		  <url>${mylyn-context-repository-url}</url>
		</repository>
		<repository>
		  <id>ecf-provider-discovery</id>
		  <layout>p2</layout>
		  <url>http://download.eclipse.org/rt/ecf/3.13.3/site.p2</url>
		</repository>
        <repository>
          <id>cbi-license</id>
          <layout>p2</layout>
          <url>http://download.eclipse.org/cbi/updates/license/</url>
        </repository>
	  </repositories>
	</profile>
  </profiles>
  <modules>
    <module>org.eclipse.mylyn.builds-feature</module>
    <module>org.eclipse.mylyn.builds-site</module>
    <module>org.eclipse.mylyn.builds.core</module>
    <module>org.eclipse.mylyn.builds.tests</module>
    <module>org.eclipse.mylyn.builds.ui</module>
    <module>org.eclipse.mylyn.builds.development-feature</module>
    <module>org.eclipse.mylyn.builds.sdk-feature</module>
    <module>org.eclipse.mylyn.hudson-feature</module>
    <module>org.eclipse.mylyn.hudson.core</module>
    <module>org.eclipse.mylyn.hudson.tests</module>
    <module>org.eclipse.mylyn.hudson.ui</module>
  </modules>
</project>
